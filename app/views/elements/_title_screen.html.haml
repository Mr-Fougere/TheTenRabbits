#title-screen{data:{controller: "title-screen", target: "title-screen.titleScreen"}}
    #title-container{data:{target: "title-screen.titleContainer"}}
        .title= t("the_ten_rabbits")
        .author= t("author")
    - if session.initialized?
        = button_to t('.begin'), introduction_path(session_uuid: session.uuid), id: "title-button", data: {target: "title-screen.titleButton",action: "click->title-screen#launchIntroduction"}
    - else
        = button_to t('.continue'), continue_path(session_uuid: session.uuid), id: "title-button", data: {target: "title-screen.titleButton",action: "click->title-screen#continueSession"}