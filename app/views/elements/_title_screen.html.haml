= turbo_stream_from("session-#{session.uuid}")
=turbo_frame_tag "title-screen", data:{controller: "title-screen", target: "title-screen.titleScreen"} do
    .title-screen__container{data:{target: "title-screen.titleContainer"}}
        .title-screen__title-container
            .title-screen__title= t("the_ten_rabbits")
        .title-screen__author-container    
            .title-screen__author= t("author")
    - if session.initialized?
        = button_to t('.begin'), introduction_path(session_uuid: session.uuid),disabled:true, class:"button--big title-screen__button", data: {target: "title-screen.titleButton",action: "click->title-screen#launchIntroduction"} 
    - else
        = button_to t('.continue'), continue_path(session_uuid: session.uuid),disabled:true, class: "button--big title-screen__button", data: {target: "title-screen.titleButton",action: "click->title-screen#continueSession"}
    .title-screen__warning-container{data: {target: "title-screen.titleWarning"}}
        .information-container
            .information__title= t("warning")
            .information__text
                .information__exclamation.left
                    =svg_tag("exclamation")
                = t(".warning_text")
                .information__exclamation.right
                    =svg_tag("exclamation")
