.bush-container{style:"--top-position:#{bush[:top]}%;--left-position:#{bush[:left]}%"}
    - source = (bush[:is_rabbit_hide]) ? "rabbit" : "unknown"
    = image_tag "#{source}.png", class: "behind-bush", data: { target: "bush.behindBush", action: "click->bush#toggleBehindBush", uuid: bush[:uuid], key: bush[:key] }
    = image_tag "bush.png", class: "bush", data: { target: "bush.bush", action: "mousedown->bush#toggleBush"}

