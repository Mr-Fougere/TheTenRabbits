= turbo_stream_from(@session.uuid)
.home{data: {controller:"responsive dark-mode", sessionUuid: "#{@session&.uuid}"}}
    %h1 The Ten Rabbits

    - if @session.present?
        = button_to "Continue", continue_session_path(id: @session&.id)
        = render partial: "elements/session_uuid"
    - else 
        = button_to "Begin", start_session_path

    - if @bushes.present?
        = render partial: "field" 
    = render partial: "elements/flag", locals: {url: "https://github.com/Mr-Fougere/TheTenRabbits", image: "github"}
    - if @credentials
        = render partial: "elements/remy"
        - if @credentials[:sergie][:key].present? && @credentials[:sergie][:uuid].present?
            = render partial: "elements/sergie"
        %div{data: {controller:"scream", key:@credentials[:steevie][:key], uuid:@credentials[:steevie][:uuid]}}    
        %div{data: {controller:"seek", key:@credentials[:debbie][:key], uuid:@credentials[:debbie][:uuid]}}
